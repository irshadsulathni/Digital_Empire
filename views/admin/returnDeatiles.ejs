        <script>
            async function acceptReturn(orderId) {
                try {
                    const response = await axios.post('/admin/acceptReturn', { orderId: orderId });
                    console.log(response.data);

                    Toastify({
                        text: "Return accepted and refund processed successfully!",
                        duration: 3000,
                        close: true,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "green",
                    }).showToast();

                    // Optionally, update the UI to reflect the refund status
                } catch (error) {
                    console.error("Error processing refund:", error);

                    Toastify({
                        text: "Failed to process refund. Please try again.",
                        duration: 3000,
                        close: true,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "red",
                    }).showToast();
                }
            }


            function denyReturn(orderId) {
                axios.post('/admin/denyReturn', {
                    orderId: orderId
                })
                    .then(function (response) {
                        console.log(response.data);
                        Toastify({
                            text: "Return denied successfully!",
                            duration: 3000,
                            close: true,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "green",
                        }).showToast();
                    })
                    .catch(function (error) {
                        console.error("Error denying return:", error);
                        Toastify({
                            text: "Failed to deny return. Please try again.",
                            duration: 3000,
                            close: true,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "red",
                        }).showToast();
                    });
            }
        </script>

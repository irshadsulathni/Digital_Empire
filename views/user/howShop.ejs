<style>
    body {
        font-family: 'Arial', sans-serif;
        line-height: 1.6;
        background-color: #f8f9fa;
        color: #555;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1,
    h2 {
        color: #009688; /* Changed color to teal */
        margin-top: 20px; /* Decreased margin-top */
    }

    p {
        margin-bottom: 15px; /* Decreased margin-bottom */
        color: #777; /* Changed text color */
        font-size: 16px; /* Decreased font size */
    }

    .step-icon {
        font-size: 1.5em; /* Decreased font size */
        color: #009688; /* Changed color to teal */
        margin-right: 15px; /* Decreased margin-right */
    }

    .footer {
        background-color: #444;
        padding: 20px;
        text-align: center;
        margin-top: 40px;
        color: #fff;
    }

    .media {
        border: 1px solid #ccc; /* Changed border color */
        border-radius: 5px;
        padding: 20px;
        background-color: #fff;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Adjusted box shadow */
        transition: transform 0.3s ease-in-out;
    }

    .media:hover {
        transform: translateY(-5px);
    }

    .media-body {
        color: #555; /* Changed text color */
    }

    .media h2 {
        color: #009688; /* Changed color to teal */
        font-size: 18px; /* Decreased font size */
    }

    .media img {
        max-width: 10%; /* Ensures images fit within their containers */
        max-height: 20%;
        border-radius: 5px; /* Adds a slight border-radius to images */
        margin-bottom: 15px; /* Adds spacing below images */
    }
</style>


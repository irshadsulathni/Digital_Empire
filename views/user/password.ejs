<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- SweetAlert library -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Updated version -->

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            position: relative;
            /* Added to make the eye icon position relative to the container */
        }

        h3 {
            margin-top: 0;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 6px;
            color: #555;
            font-weight: 500;
            text-align: left;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
            position: relative;
            /* Added to make the eye icon position relative to the form group */
        }

        .form-control {
            width: calc(100% - 40px);
            /* Adjusted width for icon */
            padding-right: 40px;
            /* Increased padding to accommodate the eye icon */
            font-size: 16px;
            border-radius: 20px;
            /* Rounded corners */
            border: 2px solid #4CAF50;
            /* Green border */
            transition: border-color 0.3s;
            box-sizing: border-box;
            /* Added to include padding in width calculation */
        }

        .form-control:focus {
            outline: none;
            border-color: #45a049;
            /* Light green border when focused */
        }

        .toggle-password {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            z-index: 2;
            color: #aaa;
            transition: color 0.3s;
        }

        .toggle-password:hover {
            color: #333;
        }

        .toggle-password.fa-eye-slash:hover {
            color: #d9534f;
            /* Change color when password is visible */
        }

        .toggle-password.fa-eye-slash {
            color: #d9534f;
            /* Change color when password is visible */
        }

        .btn-primary {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 20px;
            /* Rounded corners */
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Create new Password</h3>
        <form action="/password" class="signin-form" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" required name="password" id="password" placeholder="Enter your password">
                    <span class="toggle-password fas fa-eye"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="confirm-password">Confirm Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" required name="cPassword" id="cPassword" placeholder="Confirm your password">
                    <span class="toggle-password fas fa-eye"></span>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary rounded submit px-3">Update</button>
            </div>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).on('click', '.toggle-password', function () {
            $(this).toggleClass('fa-eye fa-eye-slash');
            var input = $($(this).siblings('input'));
            if (input.attr('type') == 'password') {
                input.attr('type', 'text');
            } else {
                input.attr('type', 'password');
            }
        });

        function validateForm() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("cPassword").value;

            var regex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}$/;

            if (!regex.test(password)) {
                Swal.fire({ 
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Password must be 8+ chars, Uppercase, Lowercase, Number, Special char (!@#$%^&*).',
                    confirmButtonColor: '#4CAF50',
                });
                return false;
            }

            if (password !== confirmPassword) {
                Swal.fire({ 
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Passwords do not match',
                    confirmButtonColor: '#4CAF50',
                });
                return false;
            }

            return true;
        }

    </script>
</body>
</html>
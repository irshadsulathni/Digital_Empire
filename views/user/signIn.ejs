<%- include('../layouts/registerHeader') %>

<div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container-fluid">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">User Register</h2>
                    <% if (typeof message !== 'undefined') { %>
                        <p style="color: red;" class="d-inline-flex p-2">
                            <%= message %>*
                        </p>
                    <% } %>
                    <form method="POST" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="name" id="name" placeholder="Your Name" required />
                            <div id="nameAlert" hidden style="color: red;">Name should be at least 3 characters</div>
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input type="email" name="email" id="email" placeholder="Your Email" required />
                            <div id="emailAlert" hidden style="color: red;">Enter a valid email address</div>
                        </div>
                        <div class="form-group">
                            <label for="mobile"><i class="zmdi zmdi-phone"></i></label>
                            <input type="number" name="mobile" id="mobile" placeholder="Your Mobile Number" required />
                            <div id="mobileAlert" hidden style="color: red;">Enter a valid mobile number</div>
                        </div>
                        <div class="form-group">
                            <label for="referralCode"><i class="zmdi zmdi-label"></i></label>
                            <input type="text" name="referralCode" id="referralCode" placeholder="Referral Code (optional)" />
                        </div>
                        <div class="form-group">
                            <div class="input-container">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="pass" placeholder="Password" required />
                                <i class="fas fa-eye toggle-password" id="toggle-password-pass"></i>
                            </div>
                            <div id="passwordAlert" hidden style="color: red;">Password must include one lowercase, one uppercase, one special character, and one number</div>
                        </div>
                        <div class="form-group">
                            <div class="input-container">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_password" id="re_pass" placeholder="Repeat your password" required />
                                <i class="fas fa-eye toggle-password" id="toggle-password-re_pass"></i>
                            </div>
                            <div id="repassAlert" hidden style="color: red;">Passwords do not match</div>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            <div class="social-login">
                                <span class="social-label">Or login with</span>
                                <ul class="socials">
                                    <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="#"><i class="display-flex-center zmdi zmdi-apple"></i></a></li>
                                    <li><a href="/auth/google"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="/userLoginAssets/images/signup-image.jpg" alt="sign up image"></figure>
                    <a href="/signUp" class="signup-image-link">I am already a member</a>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include('../layouts/userValidation') %>
<%- include('../layouts/registerFooter') %>

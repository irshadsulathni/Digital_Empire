<script>
    function addToCart(variantPrice, productId) {
        const price = Number(variantPrice);
        const qty = 1; // Set the quantity to 1 for simplicity
        const subtotal = qty * price; // Calculate subtotal

        // Send a POST request using Axios
        axios.post('/cart', {
            productId: productId,
            quantity: qty,
            subtotal: subtotal
        })
            .then(function (success) {
                window.location.href = '/cart';
            })
            .catch(function (error) {
                console.error('Error:', error);
            });
    }

    function removeWishlistItem(element) {
        const productId = element.closest('button').getAttribute('data-product-id');
        Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to remove this item from your Wishlist.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, remove it!'
        }).then((result) => {
            if (result.isConfirmed) {
                axios.delete(`/wishlist/deleteWishlistItem/${productId}`)
                    .then(response => {
                        if (response.status === 200) {
                            document.querySelector(`[data-product-id="${productId}"]`).remove();
                            Swal.fire(
                                'Removed!',
                                'The item has been removed from your wishlist.',
                                'success'
                            ).then(() => {
                                window.location.reload();
                            });
                        } else {
                            console.error('Failed to remove item from wishlist');
                            Swal.fire(
                                'Error!',
                                'Failed to remove item from wishlist.',
                                'error'
                            );
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire(
                            'Error!',
                            'An error occurred while processing your request.',
                            'error'
                        );
                    });
            }
        });
    }


</script>

